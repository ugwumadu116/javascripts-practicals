///////////////////////////////////// OR  ///////////////////////////////////
function sumSquare(arr){
	return arr.map(steps =>{
		return steps*steps
	}).reduce((acc, steps)=>{
		return acc + steps
	},0)
}
console.log(sumSquare([0,1,2,3,4]))
